using System;

public class TemperatureConverter
{
    public static void Main(string[] args)
    {
        double[] celsiusTemperatures = new double[5];
        string[] temperatureCategories = new string[5];


        Console.WriteLine("Enter 5 temperatures in Celsius:");

        for (int i = 0; i < 5; i++)
        {
            while (true)
            {
                Console.Write($"Enter temperature {i + 1}: ");
                if (double.TryParse(Console.ReadLine(), out celsiusTemperatures[i]))
                {
                    break;
                }
                Console.WriteLine("Invalid input. Please enter a number.");
            }
        }

        for (int i = 0; i < 5; i++)
        {
            double fahrenheit = celsiusTemperatures[i] * 9.0 / 5.0 + 32;
            temperatureCategories[i] = CategorizeTemperature(celsiusTemperatures[i]);

            Console.WriteLine($"\nTemperature {i + 1}:");
            Console.WriteLine($"Celsius: {celsiusTemperatures[i]:F2}");
            Console.WriteLine($"Fahrenheit: {fahrenheit:F2}");
            Console.WriteLine($"Category: {temperatureCategories[i]}");
        }
    }

    static string CategorizeTemperature(double celsius)
    {
        if (celsius < 15)
        {
            return "Cold";
        }
        else if (celsius <= 30)
        {
            return "Warm";
        }
        else
        {
            return "Hot";
        }
    }
}