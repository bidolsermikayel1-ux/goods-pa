using System;

public class StringCharacterAccess
{
    public static void Main(string[] args)
    {
        string[] names = new string[3];
        Console.WriteLine("Enter 3 names:");

        for (int i = 0; i < 3; i++)
        {
            Console.Write($"Name {i + 1}: ");
            names[i] = Console.ReadLine();
            //Input validation: Check for empty names.
            while (string.IsNullOrEmpty(names[i])) {
                Console.WriteLine("Name cannot be empty. Please enter a valid name:");
                names[i] = Console.ReadLine();
            }


        }

        foreach (string name in names)
        {
            if (name.Length > 0) { //Further validation to handle empty strings
                char firstChar = name[0];
                char lastChar = name[name.Length - 1];
                string upperFirst = firstChar.ToString().ToUpper();
                string upperLast = lastChar.ToString().ToUpper();

                Console.WriteLine($"Name: {name}");
                Console.WriteLine($"First Character: {firstChar}, Uppercase: {upperFirst}");
                Console.WriteLine($"Last Character: {lastChar}, Uppercase: {upperLast}");
                Console.WriteLine();
            } else {
                Console.WriteLine("Invalid name (empty string). Skipping.");
            }
        }
    }
}