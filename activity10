using System;
using System.Collections.Generic;

public class HeightClassification
{
    public static void Main(string[] args)
    {
        // Get user input with error handling
        double[] heights = new double[6];
        for (int i = 0; i < 6; i++)
        {
            Console.Write($"Enter height for person {i + 1} (in cm): ");
            if (!double.TryParse(Console.ReadLine(), out heights[i]))
            {
                Console.WriteLine("Invalid input. Please enter a number.");
                return; // Exit if input is invalid.
            }
        }

        // Classify heights and count totals.
        Dictionary<string, int> heightCounts = ClassifyHeights(heights);


        // Display results
        Console.WriteLine("\nHeight Classification:");
        foreach (KeyValuePair<string, int> kvp in heightCounts)
        {
            Console.WriteLine($"{kvp.Key}: {kvp.Value}");
        }
    }

    static Dictionary<string, int> ClassifyHeights(double[] heights)
    {
        Dictionary<string, int> counts = new Dictionary<string, int>()
        {
            {"Short", 0},
            {"Average", 0},
            {"Tall", 0}
        };

        foreach (double height in heights)
        {
            if (height < 150)
            {
                counts["Short"]++;
            }
            else if (height <= 170)
            {
                counts["Average"]++;
            }
            else
            {
                counts["Tall"]++;
            }
        }
        return counts;
    }
}